#!/bin/sh
sudo pacman -Sy --noconfirm python && python -m ensurepip --upgrade --user && python -m pip install --upgrade --user ansible && python -m ansible adhoc localhost --module-name package --become --args name=ansible,git -v && ansible-pull -U https://github.com/voltamage/dotfiles.git -v && ansible-playbook ~/.ansible/pull/artixlinux/sshkey.yml --ask-vault-pass -v && ansible-playbook ~/.ansible/pull/artixlinux/stage2.yml -v && cd ~/dotfiles && git remote remove origin && git remote add origin git@github.com:voltamage/dotfiles.git && cd ~/
