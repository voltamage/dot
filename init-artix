#!/bin/sh
sudo pacman -Sy --noconfirm ansible && ansible localhost --module-name package --become --args name=git && ansible-pull -U https://github.com/voltamage/dotfiles.git -v && ansible-playbook ~/dotfiles/sshkey.yml --ask-vault-pass -v && ansible-playbook ~/dotfiles/stage2.yml -v && cd ~/dotfiles && git remote remove origin && git remote add origin git@github.com:voltamage/dotfiles.git && cd ~/
